<section class="products-show">

  <header class="page-header">
    <h1>
      <%= link_to @product.category.name, @product.category %> &raquo;
        <%= @product.name %>
    </h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd>
            <%= @product.name %>
          </dd>
          <dt>Description</dt>
          <dd>
            <%= @product.description %>
          </dd>
          <dt>Quantity</dt>
          <dd>
            <%= @product.quantity %>
          </dd>
          <dt>Price</dt>
          <dd>
            <%= @product.price %>
          </dd>
        </dl>
      </div>
      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <h4 class="col-sm-8">Reviews</h4>
          <%= render @product.reviews %>
        </dl>
        <%= form_for ([@product, @review]) do |review| %>
          <div class="field">
            <%= review.label :description %>
              <%= review.text_field :description %>
          </div>
          <div class="field">
            <%= review.label :rating %>
              <%= review.select :rating, ((1..5).map {|i| [i,i] }) %>
          </div>
          <div>
            <%= review.submit %>
          </div>
          <% end %>
      </div>
    </div>
    </div>

  </article>

</section>